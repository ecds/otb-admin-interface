<OtbCrud::FormSection @label="title" as |inputId|>
  <label class="uk-form-label" for={{concat inputId '-title'}}>{{modelTitle}} Title</label>
  <section class="uk-width-1-1">
    <Input class="uk-input" @id={{concat inputId '-title'}} @value={{model.title}} />
  </section>
</OtbCrud::FormSection>

<hr>

{{#if (eq modelTitle "Tour")}}
  <OtbCrud::FormSection @label={{concat modelTitle "Published?"}} as |inputId|>
    <OtbTooltip @tooltipContent={{t "tooltip.published"}} @ariaDescribedBy={{concat inputId "-aria-describedby"}}>
      <label class="uk-form-label" for={{concat inputId '-published'}}>Published</label>
    </OtbTooltip>
    <section class="uk-width-1-1">
      <input
        type="checkbox"
        id={{concat inputId '-published'}}
        name={{model.published}}
        checked={{model.published}}
        class="uk-checkbox"
      >
    </section>
  </OtbCrud::FormSection>

  <hr>
{{/if}}

<OtbCrud::FormSection @label='description' as |inputId|>
  <label class="uk-form-label" for={{concat inputId '-' modelTitle '-description'}}>{{modelTitle}} Description</label>
  <section class="uk-width-1-1">
    <EmberJodit @id={{concat inputId '-' modelTitle '-description'}} @value={{if model.description model.description ""}} @model={{model}} @modelAttr="description" @onChange={{action (mut model.description)}} />
  </section>
</OtbCrud::FormSection>

<hr>

<OtbCrud::FormSection @label='meta description' as |inputId|>
  <OtbTooltip @tooltipContent={{t "tooltip.metaDescription"}} @ariaDescribedBy={{concat inputId "-aria-describedby"}}>
    <label class="uk-form-label" for={{concat inputId '-' modelTitle '-meta-description'}}>{{modelTitle}} Meta Description</label>
  </OtbTooltip>
  <section class="uk-width-1-1">
    <Textarea @id={{concat inputId '-' modelTitle '-meta-description'}} @rows={{6}} class="uk-textarea" @value={{model.meta_description}} />
  </section>
</OtbCrud::FormSection>